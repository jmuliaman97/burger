<h1>Eat Da Burger!</h1>

<img id="burgerImage" src="./img/burger.png" alt="Burger Image">

<div class="row">
  <div class="col s12">
    <form>
      <label for="name">Input Burger</label>
      <input type="text" name:"name" id="name">
      <button id="addBurger">Add Burger</button>
    </form>
  </div>
</div>

  <div class="container">
    <div class="row">
      <div class="column">
        <ul id="burgers">
          {{#each devour}}
          <li>
            {{this.burger_name}}
            <button class="devour" data-id="{{this.id}}" value="{{this.burger_name}}">Devour</button>
          </li>
          {{/each}}
        </ul>
      </div>
      <div class="column">
        <ul id='devoured'>
          {{#each devoured}}
          <li>
            {{this.burger_name}}
          </li>
        </ul>
        {{/each}}
      </div>
    </div>
  </div>

<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="./burgers.js"></script>